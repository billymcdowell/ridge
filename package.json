{
  "name": "ridge-ui",
  "private": false,
  "version": "0.0.2",
  "description": "A modern web component library built with Lit",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "keywords": [
    "web-components",
    "lit",
    "typescript",
    "design-system",
    "ui-library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/billymcdowell/ridge-ui.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@storybook/web-components-vite": "^9.1.4",
    "storybook": "^9.1.4",
    "typescript": "~5.8.3",
    "vite": "^7.1.2"
  }
