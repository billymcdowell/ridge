{
  "name": "ridge",
  "version": "1.0.0",
  "description": "Ridge Design System - A comprehensive web component library",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:tokens && npm run build:components",
    "build:tokens": "cd packages/tokens && npm run build",
    "build:components": "rollup -c",
    "dev": "npm run build:tokens && rollup -c -w",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:dev": "cd apps/docs && npm run dev",
    "docs:build": "cd apps/docs && npm run build",
    "test": "web-test-runner",
    "lint": "eslint packages/components/src --ext .ts",
    "format": "prettier --write packages/components/src",
    "clean": "rm -rf dist packages/*/dist",
    "prepare": "npm run build",
    "prepublishOnly": "node scripts/pre-publish.js",
    "release": "node scripts/release.js",
    "publish:beta": "npm publish --tag beta",
    "publish:alpha": "npm publish --tag alpha"
  },
  "keywords": [
    "web-components",
    "lit",
    "typescript",
    "design-system",
    "ui-library"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.3.1",
    "typescript": "^5.9.2"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "!src/**/*.test.*",
    "!src/**/*.stories.*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./tokens": {
      "import": "./packages/tokens/dist/index.js",
      "require": "./packages/tokens/dist/index.cjs"
    },
    "./tokens.css": "./packages/tokens/dist/tokens.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/my-component-library.git"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "rimraf": "^5.0.5",
    "@storybook/web-components": "^9.1.4",
    "@storybook/web-components-vite": "^9.1.4",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-esbuild": "^1.0.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-storybook": "^9.1.4",
    "prettier": "^3.6.2",
    "rollup": "^4.50.0",
    "rollup-plugin-dts": "^6.2.3",
    "storybook": "^9.1.4",
    "tslib": "^2.8.1",
    "tsx": "^4.7.0",
    "vite": "^7.1.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}